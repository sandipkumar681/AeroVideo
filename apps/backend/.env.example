# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database_name?retryWrites=true&w=majority

# Server Configuration
CORS_ORIGIN=http://localhost:5173
PORT=8000

# JWT Configuration
ACCESS_TOKEN_SECRET=your_access_token_secret_here_min_32_characters
ACCESS_TOKEN_EXPIRY=15      # in minutes (recommended: 15-60)
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_min_32_characters
REFRESH_TOKEN_EXPIRY=7      # in days (recommended: 7-30)

# Backblaze B2 Configuration
B2_APPLICATION_KEY_ID=your_b2_application_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_BUCKET_NAME=your_b2_bucket_name
B2_BUCKET_ID=your_b2_bucket_id

# Email Configuration (Gmail SMTP)
GMAIL_PORT=587
SENDER_GMAIL_ADDRESS=your-email@gmail.com
SENDER_GMAIL_PASSWORD=your_gmail_app_password
OTP_EXPIRY_TIME=10          # in minutes (recommended: 5-15)

# Cookie Configuration
HTTPONLY=true               # Prevents JavaScript access to cookies
PARTITIONED=true            # Enables partitioned cookies for better privacy
SAMESITE=none               # Options: strict, lax, none (use 'lax' for local dev)
SECURE=true                 # Requires HTTPS (set to false for local development)

#Logs
NODE_ENV=production
# NODE_ENV=development